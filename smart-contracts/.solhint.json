{
  "extends": "solhint:recommended",
  "rules": {
    "max-line-length": "off",
    "quotes": "off",
    "explicit-types": "off",
    "not-rely-on-time": "off",
    "compiler-version": [
      "warn",
      "^0.8.21"
    ],
    "func-visibility": [
      "error",
      {
        "ignoreConstructors": true
      }
    ],
    "comprehensive-interface": "warn",
    "ordering": "warn",
    "private-vars-leading-underscore": "off",
    "var-name-mixedcase": "warn",
    "reason-string": "warn",
    "no-inline-assembly": "error"
  }
}