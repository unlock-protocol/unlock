{
  "name": "locksmith",
  "version": "1.0.0",
  "description": "an unlock storage service",
  "main": "server.js",
  "scripts": {
    "prestart": "npm run build",
    "start" : "node ./build/server.js",
    "predev": "NODE_ENV=development npm run db:migrate",
    "dev": "tsc-watch --onSuccess 'node build/server.js' --onFailure 'echo Beep! Compilation Failed'",
    "pretest": "NODE_ENV=test sequelize db:migrate",
    "test": "jest --forceExit",
    "lint": "eslint .",
    "reformat": "prettier-eslint \"src/**/*.js\" --write",
    "eslint-check": "eslint --print-config . | eslint-config-prettier-check",
    "db:migrate": "sequelize db:migrate",
    "fail-pending-changes": "../scripts/pending-changes.sh",
    "ci": "npm run lint && npm test && npm run reformat && npm run fail-pending-changes",
    "build": "tsc",
    "tsc": "tsc",
    "dist" : "sh ./scripts/dist.sh"
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "eslint",
        "npm run reformat",
        "git add"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/jest": "^24.0.11",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "eth-sig-util": "^2.1.1",
    "ethereumjs-util": "^6.0.0",
    "ethers": "^4.0.26",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "jest": "^24.1.0",
    "jsontokens": "^1.0.0",
    "lodash.isequal": "^4.5.0",
    "nock": "~10.0.6",
    "node-mocks-http": "^1.7.3",
    "pg": "^7.7.1",
    "sequelize": "^4.41.2",
    "sequelize-cli": "^5.4.0",
    "supertest": "^3.3.0",
    "ts-jest": "^24.0.0",
    "@types/express": "^4.16.1",
    "@types/node": "^11.11.3",
    "typescript": "^3.3.3333",
    "web3": "^1.0.0-beta.37",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.8",
    "sqlite3": "^4.0.6",
    "supertest": "^3.3.0",
    "tsc-watch": "^2.1.2"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ]
  }
}
