{
  "name": "@unlock-protocol/subgraph",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "generate-subgraph-yaml": "node ./bin/subgraph_generator.js",
    "codegen": "graph codegen",
    "build": "graph build",
    "deploy": "graph deploy --node https://api.thegraph.com/deploy/ ",
    "create-local": "graph create --node http://localhost:8020/ ",
    "remove-local": "graph remove --node http://localhost:8020/ ",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001",
    "test": "graph test",
    "ci": "yarn generate-subgraph-yaml --network goerli && yarn codegen && yarn test",
    "lint": "eslint --resolve-plugins-relative-to ../packages/eslint-config --ext .ts,.js src/ bin/"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "0.33.0",
    "@graphprotocol/graph-ts": "0.27.0",
    "@unlock-protocol/eslint-config": "workspace:./packages/eslint-config",
    "@unlock-protocol/networks": "workspace:^",
    "eslint": "8.8.0",
    "fs-extra": "10.0.1",
    "handlebars": "4.7.7",
    "lint-staged": "13.0.3",
    "yargs": "17.3.1"
  },
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "lint-staged": {
    ".{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "matchstick-as": "^0.5.0"
  }
}
