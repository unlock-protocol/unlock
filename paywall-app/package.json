{
  "name": "@unlock-protocol/paywall-app",
  "version": "0.1.0",
  "scripts": {
    "dev": "nodemon src/server.js",
    "build": "next build src",
    "deploy": "yarn run build && next export src -o out",
    "deploy-netlify": "./scripts/deploy-netlify.sh",
    "start": "yarn run build && NODE_ENV=production node src/server.js",
    "test": "UNLOCK_ENV=test jest --env=jsdom",
    "lint": "eslint --resolve-plugins-relative-to ../packages/eslint-config --ext .tsx,.ts,.js src/",
    "ci": "yarn test && yarn lint"
  },
  "dependencies": {
    "@types/next": "8.0.7",
    "@types/node": "14.17.14",
    "@types/postmate": "1.5.2",
    "@types/react": "17.0.19",
    "@types/react-dom": "17.0.9",
    "@types/styled-components": "5.1.14",
    "@unlock-protocol/paywall": "workspace:./packages/paywall",
    "@unlock-protocol/types": "workspace:./packages/types",
    "dotenv": "10.0.0",
    "lint-staged": "11.0.0",
    "next": "11.1.1",
    "path-match": "1.2.4",
    "postmate": "1.5.2",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-test-renderer": "17.0.2",
    "style-loader": "3.0.0",
    "styled-components": "5.2.3"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "7.14.8",
    "@svgr/cli": "5.5.0",
    "@unlock-protocol/eslint-config": "workspace:./packages/eslint-config",
    "@unlock-protocol/tsconfig": "workspace:./packages/tsconfig",
    "babel-loader": "8.2.2",
    "babel-plugin-require-context-hook": "1.0.0",
    "babel-preset-react-app": "10.0.0",
    "eslint": "7.25.0",
    "nodemon": "2.0.12",
    "prettier": "2.2.1",
    "typescript": "4.4.2"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src/server.js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
