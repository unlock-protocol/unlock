{
  "name": "@unlock-protocol/smart-contract-extensions",
  "version": "0.0.1",
  "description": "Contracts which interact with other contracts",
  "scripts": {
    "build": "yarn compile",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:mainnet": "RUN_MAINNET_FORK=1 hardhat test",
    "lint": "solium -d ./contracts/ && eslint .",
    "lintFix": "solium -d ./contracts/ --fix && eslint . --fix",
    "coverage": "hardhat coverage",
    "ci": "yarn build && yarn test && yarn coverage"
  },
  "files": [
    "build",
    "contracts",
    "src",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/unlock-protocol/unlock.git"
  },
  "keywords": [
    "Solidity",
    "Uniswap",
    "Ethereum",
    "ETH"
  ],
  "author": "HardlyDifficult",
  "license": "MIT",
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-truffle5": "2.0.7",
    "@nomiclabs/hardhat-web3": "2.0.0",
    "@openzeppelin/contracts": "4.7.3",
    "@openzeppelin/test-helpers": "0.5.16",
    "@openzeppelin/upgrades": "2.8.0",
    "@typescript-eslint/eslint-plugin": "5.42.0",
    "@typescript-eslint/parser": "5.42.0",
    "@uniswap/v3-core": "Uniswap/v3-core#0.8",
    "@uniswap/v3-periphery": "Uniswap/v3-periphery#0.8",
    "@unlock-protocol/contracts": "workspace:./packages/contracts",
    "@unlock-protocol/eslint-config": "workspace:./packages/eslint-config",
    "@unlock-protocol/hardhat-plugin": "workspace:^",
    "babel-eslint": "10.1.0",
    "bignumber.js": "9.1.0",
    "chai": "4.3.4",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "ethers": "5.7.2",
    "hardhat": "2.12.2",
    "hardhat-gas-reporter": "1.0.9",
    "hardlydifficult-eth": "1.1.4",
    "jest-specific-snapshot": "5.0.0",
    "prettier": "2.7.1",
    "solidity-coverage": "0.8.2",
    "solium": "1.2.5",
    "truffle-assertions": "0.9.2",
    "web3": "1.8.0",
    "web3-eth-abi": "1.8.0"
  }
}
